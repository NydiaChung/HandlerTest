<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_handler1_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_GetSubmit1"
        android:onClick="getSubmit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GetSubmit1" />

    <Button
        android:id="@+id/btn_GetSubmit2"
        android:onClick="getSubmit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GetSubmit2" />

    <EditText
        android:id="@+id/et_handler1_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="显示结果"/>
</LinearLayout>